{% extends "SpookyIslandUploadBundle::frontend.html.twig" %}

{# TODO: Use controller for app.debug, else use dumped assets #}
{% block css %}
{{parent()}}
 <link rel="stylesheet" href="{{ asset('bundles/spookyislandupload/mapbender.template.sidebarright.css') }}">
{% endblock %}

{% block frontend_content %}
	<div id="top" class="top">
		{% if application.elements.top is defined %}
			{% for element in application.elements.top %}
    			{{ element.render() | raw }}
			{% endfor %}
		{% endif %}
		<img src="{{ asset('bundles/spookyislandupload/images/logo.jpg') }}" alt="logo" title="logo" width="99px" height="73px">
		<h1 style="color:gray; position:absolute; left:265px; top:97%">APP_TITLE</h1>
	</div>

	<div class="box">
		<div id="sidebarright" class="sideBar">
			{% if application.elements.sidebarright is defined %}
				{% for element in application.elements.sidebarright %}
    				{{ element.render() | raw }}
				{% endfor %}
			{% endif %}
		</div>
		<div id="content" class="contentPane">
			{% if application.elements.content is defined %}
				{% for element in application.elements.content %}
    				{{ element.render() | raw }}
				{% endfor %}
			{% endif %}
		</div>
	</div>

<script type="text/javascript">
    var Mapbender = Mapbender || {};
    Mapbender.configuration = {{ application.configuration | raw }};
</script>
{% endblock %}

{% block js %}
	{{parent()}}
{% endblock %}
